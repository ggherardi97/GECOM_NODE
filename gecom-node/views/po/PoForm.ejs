<style>
  .ibox-title { padding: 15px 90px 20px 15px; }
  .form-group { margin-bottom: 12px; }
  .panel-heading strong { font-size: 13px; }
  .po-form-tabs { margin-bottom: 12px; }
  .po-form-tabs > li > a { padding: 8px 12px; }
  .po-required { color: #ed5565; margin-left: 4px; }
  .po-invalid {
    border-color: #ed5565 !important;
    box-shadow: 0 0 0 1px rgba(237, 85, 101, 0.12);
    background: #fff7f8;
  }
  .po-lookup-wrap { position: relative; }
  .po-lookup-menu {
    display: none;
    position: absolute;
    left: 0;
    right: 0;
    top: calc(100% + 2px);
    z-index: 99999;
    max-height: 220px;
    overflow-y: auto;
    background: #fff;
    border: 1px solid #d9dee4;
    border-radius: 4px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
  }
  .po-lookup-item {
    padding: 8px 10px;
    border-bottom: 1px solid #f0f2f4;
    cursor: pointer;
  }
  .po-lookup-item:last-child { border-bottom: 0; }
  .po-lookup-item:hover { background: #f5f9fc; }
  .po-lookup-empty {
    padding: 8px 10px;
    color: #777;
  }
</style>

<div class="row animated fadeInRight" style="margin-top: 25px;">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-title">
        <h5><%= t(poPage.titleKey) %></h5>
        <div class="ibox-tools">
          <button id="btnPoBack" class="btn btn-white btn-sm"><%= t('page.po.common.back') %></button>
          <button id="btnPoNew" class="btn btn-default btn-sm" style="display:none;"><i class="fa fa-plus"></i> <%= t('page.po.common.new') %></button>
          <button id="btnPoDelete" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> <%= t('page.po.common.delete') %></button>
          <button id="btnPoSave" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> <%= t('page.po.common.save') %></button>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-md-8">
            <div id="poFormFields"></div>
          </div>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading"><strong><%= t('page.po.common.tips') %></strong></div>
              <div class="panel-body">
                <p class="text-muted"><%= t('page.po.common.quickEditHint') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  window.__poPage = <%- safeJson(poPage) %>;
</script>
<script src="/js/po/po.resources.js"></script>
<script src="/js/po/po.form.page.js"></script>

