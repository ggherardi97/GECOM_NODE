<style>
  .ibox-title { padding: 15px 90px 20px 15px; }
  .bulk-actions { display:none; align-items:center; gap:8px; margin-bottom:10px; }
  #hrGridHeader th.sortable { cursor: pointer; user-select:none; }
  #hrGridBody tr { cursor: pointer; }
  #hrSavedViewsHost .sv-bar { margin-top: -2px; }
  #hrSavedViewsHost .sv-actions { margin-left: unset !important; }
  .hr-invalid {
    border-color: #ed5565 !important;
    box-shadow: 0 0 0 1px rgba(237, 85, 101, 0.12);
    background: #fff7f8;
  }
  .hr-lookup-wrap { position: relative; }
  .hr-lookup-menu {
    display: none;
    position: absolute;
    left: 0;
    right: 0;
    top: calc(100% + 2px);
    z-index: 99999;
    max-height: 220px;
    overflow-y: auto;
    background: #fff;
    border: 1px solid #d9dee4;
    border-radius: 4px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
  }
  .hr-lookup-item {
    padding: 8px 10px;
    border-bottom: 1px solid #f0f2f4;
    cursor: pointer;
  }
  .hr-lookup-item:last-child { border-bottom: 0; }
  .hr-lookup-item:hover { background: #f5f9fc; }
  .hr-lookup-empty { padding: 8px 10px; color: #777; }
</style>

<div class="row animated fadeInRight" style="margin-top: 25px;">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-title">
        <div id="hrSavedViewsHost"></div>
        <div class="ibox-tools">
          <button id="btnHrRefresh" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> <%= t('page.hr.common.refresh') %></button>
          <button id="btnHrNew" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> <%= t('page.hr.common.new') %></button>
        </div>
      </div>
      <div class="ibox-content">
        <div id="hrBulkActions" class="bulk-actions">
          <span><strong id="hrSelectedCount">0</strong> <%= t('page.hr.common.selected') %></span>
          <button id="btnHrQuickEdit" class="btn btn-default btn-sm"><i class="fa fa-pencil"></i> <%= t('page.hr.common.quickEdit') %></button>
          <button id="btnHrDelete" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> <%= t('page.hr.common.delete') %></button>
          <button id="btnHrClearSelection" class="btn btn-white btn-sm"><%= t('page.hr.common.clearSelection') %></button>
        </div>

        <div class="table-responsive">
          <table class="table table-striped" id="hrGridTable">
            <thead>
              <tr id="hrGridFilters"></tr>
              <tr id="hrGridHeader"></tr>
            </thead>
            <tbody id="hrGridBody"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  window.__hrPage = <%- safeJson(hrPage) %>;
</script>
<script src="/Assets/inspinia/js/plugins/jquery-ui/jquery-ui.min.js"></script>
<script src="/js/hr/hr.resources.js"></script>
<script src="/js/hr/hr.grid.page.js"></script>

