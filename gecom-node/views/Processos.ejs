    padding: 15px 90px 20px 15px;
  }

  th {
    padding-left: 0px;
  }

  .clicker {
    cursor: pointer;
  }

  .bulk-actions{
    display:none;
    align-items:center;
    gap:10px;
    padding:10px 15px;
    background:#f3f3f4;
    border:1px solid #e7eaec;
