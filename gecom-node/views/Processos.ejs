                </th>

                <th class="sortable" data-sort-key="ProjectName">
                  <%= t('page.processos.columns.process') %>
                  <span class="sort-indicator"></span>
                </th>

                <th class="sortable" data-sort-key="ContactName" style="width: 15%;">
                  <%= t('page.processos.columns.primaryContact') %>
                  <span class="sort-indicator"></span>
                </th>

                <th class="sortable" data-sort-key="Phone">
                  <%= t('page.processos.columns.phone') %>
