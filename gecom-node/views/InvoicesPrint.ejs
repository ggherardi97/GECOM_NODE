<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice - ImpressÃ£o</title>

  <!-- Use absolute paths to avoid /Pages/... issues -->
  <link href="/Assets/inspinia/css/bootstrap.min.css" rel="stylesheet">
  <link href="/Assets/inspinia/font-awesome/css/font-awesome.css" rel="stylesheet">
  <link href="/Assets/inspinia/css/animate.css" rel="stylesheet">
  <link href="/Assets/inspinia/css/style.css" rel="stylesheet">

  <style>
    body.white-bg { background: #fff; }
    .mono { font-family: monospace; }
    .edit-area { min-height: 110px; resize: vertical; }
    .edit-notes { min-height: 130px; resize: vertical; }

    /* Print only the invoice wrapper */
    @media print {
      .no-print { display: none !important; }
      .print-area { box-shadow: none !important; }
      body { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
    }

    .company-logo-print {
      max-width: 180px;
      max-height: 70px;
      width: auto;
      height: auto;
      object-fit: contain;
      margin-bottom: 10px;
    }
  </style>
</head>

<body class="white-bg">
  <div class="wrapper wrapper-content p-xl print-area">
    <div class="ibox-content p-xl">

      <div class="no-print" style="display:flex;gap:8px;justify-content:flex-end;margin-bottom:12px;">
        <button class="btn btn-white" onclick="window.close()"><i class="fa fa-times"></i> Fechar</button>
        <button id="btnToggleEdit" class="btn btn-warning" type="button"><i class="fa fa-pencil"></i> Editar</button>
        <button id="btnPrint" class="btn btn-primary" type="button"><i class="fa fa-print"></i> Imprimir</button>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <% if (companyLogoDataUri) { %>
            <img src="<%= companyLogoDataUri %>" alt="Company logo" class="company-logo-print" />
          <% } %>
          <h5>De:</h5>
          <address id="fromDisplay">
            <strong><%= from?.name || "-" %></strong><br>
            <%= from?.addr1 || "-" %><br>
            <%= from?.addr2 || "" %>
            <abbr title="Telefone">T:</abbr> <%= from?.phone || "-" %>
          </address>
          <textarea id="fromEditor" class="form-control no-print edit-area" style="display:none;"></textarea>
        </div>

        <div class="col-sm-6 text-right">
          <h4>Invoice</h4>
          <h4 class="text-navy mono"><%= invoice?.invoice_number || ("INV-" + String(invoice?.id || "").slice(0,8).toUpperCase()) %></h4>

          <span>Para:</span>
          <address id="toDisplay">
            <strong><%= company?.company_name || "-" %></strong><br>
            <%= invoice?.billing_address_line1 || "-" %><br>
            <%= invoice?.billing_address_line2 || "" %>
            <abbr title="Telefone">T:</abbr> <%= company?.phone || "-" %>
          </address>
          <textarea id="toEditor" class="form-control no-print edit-area" style="display:none;"></textarea>

          <p>
            <span><strong>Data:</strong> <%= invoiceDate || "-" %></span><br/>
            <span><strong>Vencimento:</strong> <%= dueDate || "-" %></span>
          </p>
        </div>
      </div>

      <div class="table-responsive m-t">
        <table class="table invoice-table">
          <thead>
            <tr>
              <th>Item</th>
              <th class="text-right">Qtd</th>
              <th class="text-right">PreÃ§o Unit.</th>
              <th class="text-right">Imposto</th>
              <th class="text-right">Total</th>
            </tr>
          </thead>
          <tbody>
            <% if (!lines || !lines.length) { %>
              <tr><td colspan="5" class="text-center text-muted">Nenhuma linha</td></tr>
            <% } else { %>
              <% lines.forEach(function(l){ %>
                <tr>
                  <td>
                    <div><%= l.description || "" %></div>
                    <small></small>
                  </td>
                  <td class="text-right"><%= l.quantityFmt %></td>
                  <td class="text-right"><%= l.unitPriceFmt %></td>
                  <td class="text-right"><%= l.taxFmt %></td>
                  <td class="text-right"><%= l.totalFmt %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>

     <table class="table invoice-total">
  <tbody>
    <tr>
      <td><strong>Sub Total :</strong></td>
      <td class="text-right"><%= totals.subtotalFmt %></td>
    </tr>

    <tr>
      <td><strong>Desconto :</strong></td>
      <td class="text-right"><%= totals.discountFmt %></td>
    </tr>

    <tr>
      <td><strong>Impostos :</strong></td>
      <td class="text-right"><%= totals.taxFmt %></td>
    </tr>

    <tr>
      <td><strong>Total :</strong></td>
      <td class="text-right"><%= totals.totalFmt %></td>
    </tr>
  </tbody>
</table>


      <div class="well m-t"><strong>ObservaÃ§Ãµes</strong>
        <div id="notesDisplay" style="margin-top:6px;"><%- notesHtml || "-" %></div>
        <textarea id="notesEditor" class="form-control no-print edit-notes" style="display:none;margin-top:8px;"></textarea>
      </div>
    </div>
  </div>

  <script>
    (function () {
      const fromDisplay = document.getElementById("fromDisplay");
      const toDisplay = document.getElementById("toDisplay");
      const notesDisplay = document.getElementById("notesDisplay");
      const fromEditor = document.getElementById("fromEditor");
      const toEditor = document.getElementById("toEditor");
      const notesEditor = document.getElementById("notesEditor");
      const btnToggleEdit = document.getElementById("btnToggleEdit");
      const btnPrint = document.getElementById("btnPrint");

      let isEditing = false;

      function escapeHtml(value) {
        return String(value ?? "")
          .replace(/&/g, "&amp;")
          .replace(/</g, "&lt;")
          .replace(/>/g, "&gt;")
          .replace(/"/g, "&quot;")
          .replace(/'/g, "&#039;");
      }

      function textToHtml(value) {
        const txt = String(value ?? "").trim();
        if (!txt) return "-";
        return escapeHtml(txt).replace(/\r\n|\r|\n/g, "<br>");
      }

      function blockToEditableText(el) {
        if (!el) return "";
        return String(el.innerText || el.textContent || "").trim();
      }

      function enterEditMode() {
        fromEditor.value = blockToEditableText(fromDisplay);
        toEditor.value = blockToEditableText(toDisplay);
        notesEditor.value = blockToEditableText(notesDisplay);

        fromDisplay.style.display = "none";
        toDisplay.style.display = "none";
        notesDisplay.style.display = "none";

        fromEditor.style.display = "";
        toEditor.style.display = "";
        notesEditor.style.display = "";

        btnToggleEdit.innerHTML = '<i class="fa fa-check"></i> Aplicar edição';
        isEditing = true;
      }

      function applyEdits() {
        fromDisplay.innerHTML = textToHtml(fromEditor.value);
        toDisplay.innerHTML = textToHtml(toEditor.value);
        notesDisplay.innerHTML = textToHtml(notesEditor.value);

        fromDisplay.style.display = "";
        toDisplay.style.display = "";
        notesDisplay.style.display = "";

        fromEditor.style.display = "none";
        toEditor.style.display = "none";
        notesEditor.style.display = "none";

        btnToggleEdit.innerHTML = '<i class="fa fa-pencil"></i> Editar';
        isEditing = false;
      }

      btnToggleEdit.addEventListener("click", function () {
        if (!isEditing) enterEditMode();
        else applyEdits();
      });

      btnPrint.addEventListener("click", function () {
        if (isEditing) applyEdits();
        window.print();
      });
    })();
  </script>
</body>
</html>

