function normalizeArrayResponse(data) {
  if (Array.isArray(data)) return data;
  if (Array.isArray(data?.data)) return data.data;
  if (Array.isArray(data?.rows)) return data.rows;
  if (Array.isArray(data?.items)) return data.items;
  return [];
}

function normalizeStatusConfigId(value) {
  const id = String(value || "").trim();
  return id || "";
}

function getProcessStatusConfigId(raw) {
  return normalizeStatusConfigId(
    raw?.status_config_id ??
    raw?.statusConfigId ??
    raw?.status_config?.id ??
    raw?.statusConfig?.id ??
    ""
  );
}

function getProcessStatusLegacyValue(raw) {
  const n = Number(raw?.status);
  return Number.isFinite(n) ? n : null;
}

function getProcessStatusDirect(raw) {
  const direct = raw?.status_config || raw?.statusConfig || null;
  return direct && typeof direct === "object" ? direct : null;
}

function getProcessStatusDisplay(raw) {
  const direct = getProcessStatusDirect(raw);
  const statusConfigId = getProcessStatusConfigId(raw);
  const legacyStatus = getProcessStatusLegacyValue(raw);

  const byId = statusConfigId ? processStatusById.get(statusConfigId) : null;
  const byLegacy = legacyStatus != null ? processStatusByLegacy.get(legacyStatus) : null;

  const label =
    String(direct?.label || "").trim() ||
    String(byId?.label || "").trim() ||
    String(byLegacy?.label || "").trim() ||
    (legacyStatus != null ? (window.ProcessStatusEnum?.getLabel(legacyStatus) || `Status ${legacyStatus}`) : "-");

  const color =
    String(direct?.color || "").trim() ||
    String(byId?.color || "").trim() ||
    String(byLegacy?.color || "").trim();

  return {
    label,
    color,
    statusConfigId,
    legacyStatus,
  };
}

async function loadProcessStatusConfigsCache() {
  if (Array.isArray(processStatusOptionsCache) && processStatusOptionsCache.length > 0) return processStatusOptionsCache;

  try {
    const resp = await fetch("/api/status-configs?entity=PROCESS&active=true", {
      method: "GET",
      headers: { Accept: "application/json" }
    });
    const data = await resp.json().catch(() => ({}));
    if (!resp.ok) throw new Error(data?.message || "Falha ao carregar status de processo.");

    processStatusOptionsCache = normalizeArrayResponse(data)
      .map((row) => ({
        id: String(row?.id || "").trim(),
        label: String(row?.label || "").trim(),
        color: String(row?.color || "").trim(),
        legacy: Number(row?.legacy_int_value),
        sort: Number(row?.sort_order || 0),
      }))
      .filter((x) => x.id && x.label)
      .sort((a, b) => (a.sort - b.sort) || String(a.label).localeCompare(String(b.label), "pt-BR"));
  } catch (e) {
    console.warn("loadProcessStatusConfigsCache fallback:", e);
    processStatusOptionsCache = [];
  }

  processStatusById.clear();
  processStatusByLegacy.clear();
  processStatusOptionsCache.forEach((opt) => {
    processStatusById.set(opt.id, opt);
    if (Number.isFinite(opt.legacy)) processStatusByLegacy.set(opt.legacy, opt);
  });

  return processStatusOptionsCache;
}

async function preloadTransportLookups() {
  // Already loaded? skip
  if (transportStatusesCache?.length && transportTypesCache?.length) return;

  const [statusesRes, typesRes] = await Promise.all([
    fetch("/api/transport-statuses", { headers: { Accept: "application/json" } }),
    fetch("/api/transport-types", { headers: { Accept: "application/json" } }),
  ]);

  const statusesJson = await statusesRes.json().catch(() => ({}));
  const typesJson = await typesRes.json().catch(() => ({}));

  transportStatusesCache = normalizeArrayResponse(statusesJson);
  transportTypesCache = normalizeArrayResponse(typesJson);

  transportStatusById.clear();
  transportTypeById.clear();

  transportStatusesCache.forEach((s) => {
    if (s?.id) transportStatusById.set(String(s.id), s);
  });

  transportTypesCache.forEach((t) => {
    if (t?.id) transportTypeById.set(String(t.id), t);
  });
}

