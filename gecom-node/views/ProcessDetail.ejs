function getExtFromName(fileName) {
  const n = String(fileName || "");
  const idx = n.lastIndexOf(".");
  if (idx <= 0 || idx >= n.length - 1) return null;
  return n.substring(idx + 1).toLowerCase();
}

async function ensureProcessFolderExists() {
