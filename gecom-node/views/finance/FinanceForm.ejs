<style>
  .ibox-title { padding: 15px 90px 20px 15px; }
  .form-group { margin-bottom: 12px; }
  .panel-heading strong { font-size: 13px; }
  .finance-form-tabs { margin-bottom: 12px; }
  .finance-form-tabs > li > a { padding: 8px 12px; }
  .finance-required { color: #ed5565; margin-left: 4px; }
  .finance-invalid {
    border-color: #ed5565 !important;
    box-shadow: 0 0 0 1px rgba(237, 85, 101, 0.12);
    background: #fff7f8;
  }
  .finance-lookup-wrap { position: relative; }
  .finance-lookup-menu {
    display: none;
    position: absolute;
    left: 0;
    right: 0;
    top: calc(100% + 2px);
    z-index: 99999;
    max-height: 220px;
    overflow-y: auto;
    background: #fff;
    border: 1px solid #d9dee4;
    border-radius: 4px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
  }
  .finance-lookup-item {
    padding: 8px 10px;
    border-bottom: 1px solid #f0f2f4;
    cursor: pointer;
  }
  .finance-lookup-item:last-child { border-bottom: 0; }
  .finance-lookup-item:hover { background: #f5f9fc; }
  .finance-lookup-empty {
    padding: 8px 10px;
    color: #777;
  }
</style>

<div class="row animated fadeInRight" style="margin-top: 25px;">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-title">
        <h5><%= t(financePage.titleKey) %></h5>
        <div class="ibox-tools">
          <button id="btnFinanceBack" class="btn btn-white btn-sm"><%= t('page.finance.common.back') %></button>
          <button id="btnFinanceNew" class="btn btn-default btn-sm" style="display:none;"><i class="fa fa-plus"></i> <%= t('page.finance.common.new') %></button>
          <button id="btnFinanceGenerateFromInvoice" class="btn btn-warning btn-sm" style="display:none;"><%= t('page.finance.common.generateFromInvoice') %></button>
          <button id="btnFinanceDelete" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> <%= t('page.finance.common.delete') %></button>
          <button id="btnFinanceSave" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> <%= t('page.finance.common.save') %></button>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-md-8">
            <div id="financeFormFields"></div>
          </div>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading"><strong><%= t('page.finance.common.tips') %></strong></div>
              <div class="panel-body">
                <p class="text-muted"><%= t('page.finance.common.quickEditHint') %></p>
              </div>
            </div>
          </div>
        </div>

        <div id="financePaymentsWrap" style="display:none; margin-top: 20px;">
          <div class="panel panel-default">
            <div class="panel-heading" style="display:flex; justify-content:space-between; align-items:center;">
              <strong><%= t('page.finance.common.payments') %></strong>
              <button id="btnFinanceAddPayment" class="btn btn-primary btn-xs"><i class="fa fa-plus"></i> <%= t('page.finance.common.newPayment') %></button>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th><%= t('page.finance.fields.paymentDate') %></th>
                      <th><%= t('page.finance.fields.amount') %></th>
                      <th><%= t('page.finance.fields.paymentMethod') %></th>
                      <th><%= t('page.finance.fields.bankAccount') %></th>
                      <th><%= t('page.finance.fields.reference') %></th>
                      <th style="width:90px;"><%= t('page.finance.common.actions') %></th>
                    </tr>
                  </thead>
                  <tbody id="financePaymentsBody"></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  window.__financePage = <%- safeJson(financePage) %>;
</script>
<script src="/js/finance/finance.resources.js"></script>
<script src="/js/finance/finance.form.page.js"></script>
