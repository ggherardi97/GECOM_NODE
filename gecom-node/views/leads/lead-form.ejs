<style>
  .lead-form-actions { display: flex; justify-content: end; gap: 8px; margin-top: 15px; }
  .ibox-content .form-group label { font-weight: 600; }
</style>

<div class="row animated fadeInRight" style="margin-top: 25px;">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-title">
        <h5><%= t('page.leads.form.title') %></h5>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-lg-6">
            <h4><%= t('page.leads.form.sectionBasic') %></h4>
            <div class="form-group">
              <label for="leadName"><%= t('page.leads.columns.name') %> *</label>
              <input id="leadName" type="text" class="form-control" maxlength="255" />
            </div>
            <div class="form-group">
              <label for="leadCompany"><%= t('page.leads.columns.company') %></label>
              <input id="leadCompany" type="text" class="form-control" list="leadCompanies" />
              <datalist id="leadCompanies"></datalist>
            </div>
            <div class="row">
              <div class="col-sm-6 form-group">
                <label for="leadFirstName"><%= t('page.leads.form.firstName') %></label>
                <input id="leadFirstName" type="text" class="form-control" />
              </div>
              <div class="col-sm-6 form-group">
                <label for="leadLastName"><%= t('page.leads.form.lastName') %></label>
                <input id="leadLastName" type="text" class="form-control" />
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6 form-group">
                <label for="leadEmail"><%= t('page.leads.columns.email') %></label>
                <input id="leadEmail" type="email" class="form-control" />
              </div>
              <div class="col-sm-6 form-group">
                <label for="leadPhone"><%= t('page.leads.columns.phone') %></label>
                <input id="leadPhone" type="text" class="form-control" />
              </div>
            </div>
          </div>

          <div class="col-lg-6">
            <h4><%= t('page.leads.form.sectionQualification') %></h4>
            <div class="row">
              <div class="col-sm-6 form-group">
                <label for="leadStage"><%= t('page.leads.columns.stage') %> *</label>
                <select id="leadStage" class="form-control"></select>
              </div>
              <div class="col-sm-6 form-group">
                <label for="leadStatus"><%= t('page.leads.columns.status') %> *</label>
                <select id="leadStatus" class="form-control">
                  <option value="NEW">NEW</option>
                  <option value="WORKING">WORKING</option>
                  <option value="NURTURING">NURTURING</option>
                  <option value="QUALIFIED">QUALIFIED</option>
                  <option value="CONVERTED">CONVERTED</option>
                  <option value="DISQUALIFIED">DISQUALIFIED</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6 form-group">
                <label for="leadValue"><%= t('page.leads.columns.value') %></label>
                <input id="leadValue" type="number" class="form-control" step="0.01" min="0" />
              </div>
              <div class="col-sm-6 form-group">
                <label for="leadCurrency"><%= t('page.leads.columns.currency') %></label>
                <select id="leadCurrency" class="form-control">
                  <option value="BRL">BRL</option>
                  <option value="USD">USD</option>
                  <option value="EUR">EUR</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6 form-group">
                <label for="leadOwner"><%= t('page.leads.columns.owner') %></label>
                <select id="leadOwner" class="form-control"></select>
              </div>
              <div class="col-sm-6 form-group">
                <label for="leadSource"><%= t('page.leads.columns.source') %></label>
                <select id="leadSource" class="form-control">
                  <option value="">-</option>
                  <option value="WEBSITE">WEBSITE</option>
                  <option value="REFERRAL">REFERRAL</option>
                  <option value="SOCIAL">SOCIAL</option>
                  <option value="PHONE">PHONE</option>
                  <option value="EMAIL">EMAIL</option>
                  <option value="OTHER">OTHER</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="leadNextAction"><%= t('page.leads.columns.nextActionAt') %></label>
              <input id="leadNextAction" type="datetime-local" class="form-control" />
            </div>
          </div>
        </div>

        <hr />
        <h4><%= t('page.leads.form.sectionNotes') %></h4>
        <div class="form-group">
          <label for="leadNotes"><%= t('page.leads.form.notes') %></label>
          <textarea id="leadNotes" class="form-control" rows="4"></textarea>
        </div>

        <div class="lead-form-actions">
          <button id="leadCancelBtn" type="button" class="btn btn-white"><%= t('page.leads.common.cancel') %></button>
          <button id="leadSaveBtn" type="button" class="btn btn-primary"><i class="fa fa-save"></i> <%= t('page.leads.form.save') %></button>
        </div>
      </div>
    </div>
  </div>
</div>

<% contentFor('scripts') %>
  <script src="/js/common/apiClient.js"></script>
  <script src="/js/leads/lead.form.js"></script>
<% %>
