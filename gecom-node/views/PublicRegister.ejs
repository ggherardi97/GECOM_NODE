  <link href="/Assets/inspinia/css/style.css" rel="stylesheet" />
  <link href="/Assets/inspinia/css/plugins/sweetalert/sweetalert.css" rel="stylesheet" />

  <style>
    body.register-marketing {
      min-height: 100vh;
      background: linear-gradient(145deg, #f8fbfd 0%, #f0f5f8 45%, #e9f3ef 100%);
    }

    .top-login-link {
      position: fixed;
      top: 14px;
      right: 18px;
      z-index: 1002;
      width: 42px;
      height: 42px;
      border-radius: 50%;
      border: 1px solid #1ab394;
      background: #1ab394;
      color: #fff;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 22px rgba(26, 179, 148, 0.35);
      transition: all .18s ease;
    }

    .top-login-link:hover,
    .top-login-link:focus {
      color: #fff;
      background: #159a80;
      border-color: #159a80;
      transform: translateY(-1px);
      text-decoration: none;
    }

    .gecom-spinner-overlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(255, 255, 255, .72);
      z-index: 9999;
      align-items: center;
      justify-content: center;
    }

    .gecom-spinner-overlay.is-visible {
      display: flex;
    }

    .gecom-spinner-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 12px;
      background: #fff;
      border: 1px solid #e7edf2;
      border-radius: 14px;
      box-shadow: 0 12px 34px rgba(0, 0, 0, 0.12);
      padding: 18px 22px;
      min-width: 320px;
    }

    .gecom-spinner-text {
      font-weight: 600;
      color: #2f3f48;
      text-align: center;
      max-width: 360px;
    }

    .hero-wrap {
      padding: 120px 0 70px;
    }

    .hero-title {
      font-size: 44px;
      line-height: 1.15;
      margin-bottom: 18px;
    }

    .hero-subtitle {
      font-size: 17px;
      color: #4d5a62;
      margin-bottom: 24px;
    }

    .hero-card {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 18px 45px rgba(14, 34, 56, 0.12);
      padding: 24px;
      border: 1px solid #e9eef2;
    }

    .feature-pill {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 999px;
      background: #ecf8f2;
      color: #1f9d62;
      margin: 4px 8px 4px 0;
      font-size: 12px;
      font-weight: 600;
    }

    .plans-stage {
      display: none;
      padding: 110px 0 60px;
    }

    .plans-stage.is-active {
      display: block;
    }

    .plan-card {
      background: #fff;
      border: 1px solid #e7edf2;
      border-radius: 14px;
      padding: 22px;
      min-height: 345px;
      position: relative;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.06);
      transition: transform .2s ease, box-shadow .2s ease;
    }

    .plan-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 18px 36px rgba(0, 0, 0, 0.10);
    }

    .plan-card.selected {
      border-color: #1ab394;
      box-shadow: 0 20px 44px rgba(26, 179, 148, 0.2);
    }

    .plan-name {
      font-size: 24px;
      margin-bottom: 8px;
      color: #29363d;
    }

    .plan-price {
      font-size: 28px;
      font-weight: 700;
      color: #1ab394;
      margin-bottom: 6px;
    }

    .plan-price small {
      font-size: 14px;
      color: #7f8b91;
      font-weight: 500;
    }

    .plan-list {
      margin: 16px 0 18px;
      padding-left: 18px;
      color: #57656d;
    }

    .plan-list li {
      margin-bottom: 8px;
    }

    .disclaimer-box {
      border-left: 4px solid #f8ac59;
      padding: 12px 14px;
      background: #fff8ef;
      color: #8a5b19;
      border-radius: 6px;
      margin: 22px 0 0;
      font-weight: 600;
    }

    .register-form-wrap {
      display: none;
      margin-top: 30px;
    }

    .register-form-wrap.is-active {
      display: block;
    }

    .register-form-card {
      background: #fff;
      border: 1px solid #e6edf2;
      border-radius: 14px;
      box-shadow: 0 14px 34px rgba(0, 0, 0, 0.08);
      padding: 26px;
    }

    .section-hidden {
      display: none !important;
    }

    .btn-plan {
      width: 100%;
    }

    .plans-list-wrap {
      transition: opacity .2s ease;
    }

    .plans-list-wrap.is-hidden {
      display: none;
    }

    .custom-module-option {
      border: 1px solid #dfe8ee;
      border-radius: 8px;
      padding: 8px 10px;
      margin-bottom: 10px;
      min-height: 74px;
      background: #fff;
    }

    .custom-module-option label {
      margin: 0;
      cursor: pointer;
      width: 100%;
    }

    .custom-module-price {
      color: #1a9d7b;
      font-weight: 700;
      font-size: 12px;
      display: inline-block;
      margin-top: 4px;
    }

    .selected-plan-chip {
      display: inline-block;
      margin-bottom: 12px;
      padding: 7px 13px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 700;
      letter-spacing: .2px;
      background: #e8fbf5;
      color: #1a7b58;
    }

    .back-plan-btn {
      border: none;
      background: transparent;
      color: #1ab394;
      font-weight: 700;
      padding: 0;
      margin-bottom: 10px;
    }

    @media (max-width: 991px) {
      .hero-title {
        font-size: 34px;
      }

      .hero-wrap {
        padding-top: 96px;
      }

      .plans-stage {
        padding-top: 94px;
      }
    }
  </style>
