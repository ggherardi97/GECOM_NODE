  <script>
    (function () {
      const state = {
        selectedPlanId: null,
        selectedPlanName: null,
        isSubmitting: false
      };
      const loaderMessages = [
        "Estamos preparando seu ambiente...",
        "Criando configurações de segurança...",
        "Configurando empresa e usuário administrador...",
        "Finalizando seu acesso inicial..."
      ];
      let loaderTimer = null;
      let loaderMessageIndex = 0;

      function showLandingStage() {
        document.getElementById("heroSection")?.classList.remove("section-hidden");
        document.getElementById("featuresPublic")?.classList.remove("section-hidden");
        document.getElementById("plansStage")?.classList.remove("is-active");
      }

      function showPlansStage() {
        document.getElementById("heroSection")?.classList.add("section-hidden");
        document.getElementById("featuresPublic")?.classList.add("section-hidden");
        document.getElementById("plansStage")?.classList.add("is-active");
        window.scrollTo({ top: 0, behavior: "smooth" });
      }

      function showPlanChooser() {
        document.getElementById("plansListWrap")?.classList.remove("is-hidden");
        document.getElementById("registerFormWrap")?.classList.remove("is-active");
      }

      function normalizeString(value) {
        return String(value || "").trim();
      }

      function slugifyCompanyName(name) {
        const normalized = normalizeString(name)
          .normalize("NFD")
          .replace(/[\u0300-\u036f]/g, "")
          .toLowerCase()
          .replace(/[^a-z0-9]+/g, "-")
          .replace(/^-+|-+$/g, "")
          .slice(0, 45);

        if (normalized) return normalized;
        return `tenant-${Date.now()}`;
      }

      async function readJsonSafe(response) {
        const text = await response.text().catch(() => "");
        if (!text) return {};
        try {
          return JSON.parse(text);
        } catch {
          return { message: text };
        }
      }

      async function postJson(url, payload) {
        const response = await fetch(url, {
          method: "POST",
          headers: {
            "Accept": "application/json",
            "Content-Type": "application/json"
          },
          credentials: "include",
          body: JSON.stringify(payload || {})
        });

        const data = await readJsonSafe(response);
        if (!response.ok) {
          const error = new Error(data?.message || `Falha na chamada ${url}`);
          error.status = response.status;
          error.data = data;
          throw error;
        }
        return data;
      }

      function renderPlanSelection(planCard) {
        document.querySelectorAll(".plan-card").forEach((card) => card.classList.remove("selected"));
        planCard.classList.add("selected");

        state.selectedPlanId = normalizeString(planCard.getAttribute("data-plan-id"));
        state.selectedPlanName = normalizeString(planCard.getAttribute("data-plan-name"));

        const chip = document.getElementById("selectedPlanChip");
        chip.textContent = `${state.selectedPlanName} selecionado`;

        const categoryInput = document.getElementById("companyCategoryInput");
        if (categoryInput && !normalizeString(categoryInput.value)) {
          categoryInput.value = state.selectedPlanName;
        }

        document.getElementById("plansListWrap")?.classList.add("is-hidden");
        document.getElementById("registerFormWrap")?.classList.add("is-active");
        document.getElementById("registerFormWrap")?.scrollIntoView({ behavior: "smooth", block: "start" });
      }

      async function syncCurrentUserFromMe() {
        const meResp = await fetch("/api/auth/me", {
          method: "GET",
          headers: { "Accept": "application/json" },
          credentials: "include"
        });

        const me = await readJsonSafe(meResp);
        if (!meResp.ok || !me?.id) return;

        localStorage.setItem("currentUser", JSON.stringify(me));
        localStorage.setItem("currentUserId", String(me.id));
        if (me.company_id != null) {
          localStorage.setItem("companyId", String(me.company_id));
        }
      }

      function setSubmitState(isLoading) {
        state.isSubmitting = isLoading;
        const btn = document.getElementById("confirmBtn");
        if (!btn) return;

        btn.disabled = isLoading;
        btn.innerHTML = isLoading
          ? '<i class="fa fa-spinner fa-spin"></i> Processando...'
          : '<i class="fa fa-check"></i> Confirmar cadastro';

        if (isLoading) {
          showLoader();
        } else {
          hideLoader();
        }
      }

      function showLoader() {
        const overlay = document.getElementById("publicRegisterSpinner");
        const textEl = document.getElementById("publicRegisterSpinnerText");
        if (!overlay || !textEl) return;

        loaderMessageIndex = 0;
        textEl.textContent = loaderMessages[loaderMessageIndex];
        overlay.classList.add("is-visible");
        overlay.setAttribute("aria-hidden", "false");

        if (loaderTimer) clearInterval(loaderTimer);
        loaderTimer = setInterval(function () {
          loaderMessageIndex = (loaderMessageIndex + 1) % loaderMessages.length;
          textEl.textContent = loaderMessages[loaderMessageIndex];
        }, 1900);
      }

      function hideLoader() {
        const overlay = document.getElementById("publicRegisterSpinner");
        if (!overlay) return;
        overlay.classList.remove("is-visible");
        overlay.setAttribute("aria-hidden", "true");

        if (loaderTimer) {
          clearInterval(loaderTimer);
          loaderTimer = null;
        }
      }

      function validateFormPayload() {
        const companyName = normalizeString(document.getElementById("companyNameInput")?.value);
        const userName = normalizeString(document.getElementById("userNameInput")?.value);
        const email = normalizeString(document.getElementById("emailInput")?.value);
        const phone = normalizeString(document.getElementById("phoneInput")?.value);
        const password = normalizeString(document.getElementById("passwordInput")?.value);
        const companyNumber = normalizeString(document.getElementById("companyNumberInput")?.value);
        const companySector = normalizeString(document.getElementById("companySectorInput")?.value);
        const companyCategory = normalizeString(document.getElementById("companyCategoryInput")?.value);
        const street = normalizeString(document.getElementById("addressStreetInput")?.value);
        const number = normalizeString(document.getElementById("addressNumberInput")?.value);
        const city = normalizeString(document.getElementById("addressCityInput")?.value);
        const stateUf = normalizeString(document.getElementById("addressStateInput")?.value);
        const postalCode = normalizeString(document.getElementById("addressPostalCodeInput")?.value);
        const country = normalizeString(document.getElementById("addressCountryInput")?.value);
        const language = normalizeString(document.getElementById("companyLanguageInput")?.value) || "pt-BR";
        const acceptTerms = !!document.getElementById("acceptTermsInput")?.checked;
        const expectation = normalizeString(document.getElementById("expectationInput")?.value);

        if (!state.selectedPlanId) throw new Error("Selecione um plano antes de confirmar.");
        if (!companyName) throw new Error("Nome da empresa é obrigatório.");
        if (!userName) throw new Error("Nome do utilizador é obrigatório.");
        if (!email || !/^\S+@\S+\.\S+$/.test(email)) throw new Error("Informe um e-mail válido.");
        if (!phone) throw new Error("Telefone é obrigatório.");
        if (!password || password.length < 8) throw new Error("A senha do admin deve ter no mínimo 8 caracteres.");
        if (!companyNumber) throw new Error("CNPJ / Company Number é obrigatório.");
        if (!companySector) throw new Error("Setor é obrigatório.");
        if (!companyCategory) throw new Error("Categoria é obrigatória.");
        if (!street || !number || !city || !stateUf || !postalCode || !country) throw new Error("Preencha todos os dados de endereço.");
        if (!acceptTerms) throw new Error("Você precisa aceitar os termos para continuar.");

        return {
          tenant_name: companyName,
          tenant_slug: slugifyCompanyName(companyName),
          company_name: companyName,
          company_phone: phone,
          company_number: companyNumber,
          company_sector: companySector,
          company_category: companyCategory,
          company_address_street: street,
          company_address_number: number,
          company_address_city: city,
          company_address_country: country,
          company_address_state: stateUf,
          company_address_postalcode: postalCode,
          company_language: language,
          admin_full_name: userName,
          admin_email: email,
          admin_password: password,
          admin_phone: phone,
          acept_terms: acceptTerms,
          expectation
        };
      }

      async function onSubmitForm(event) {
        event.preventDefault();
        if (state.isSubmitting) return;

        try {
          const payload = validateFormPayload();
          const signupPayload = {
            tenant_name: payload.tenant_name,
            tenant_slug: payload.tenant_slug,
            company_name: payload.company_name,
            company_phone: payload.company_phone,
            company_number: payload.company_number,
            company_sector: payload.company_sector,
            company_category: payload.company_category,
            company_address_street: payload.company_address_street,
            company_address_number: payload.company_address_number,
            company_address_city: payload.company_address_city,
            company_address_country: payload.company_address_country,
            company_address_state: payload.company_address_state,
            company_address_postalcode: payload.company_address_postalcode,
            company_language: payload.company_language,
            admin_full_name: payload.admin_full_name,
            admin_email: payload.admin_email,
            admin_password: payload.admin_password,
            admin_phone: payload.admin_phone,
            acept_terms: payload.acept_terms
          };

          setSubmitState(true);
          await postJson("/auth/signup", signupPayload);
          await syncCurrentUserFromMe();

          swal({
            title: "Cadastro concluído!",
            text: "Seu ambiente foi criado e sua sessão já está autenticada.",
            type: "success"
          }, function () {
            window.location.href = "/Default";
          });
        } catch (error) {
          console.error("[PublicRegister] submit error:", error);
          const msg = error?.message || "Não foi possível concluir o cadastro.";
          swal("Falha no cadastro", msg, "error");
        } finally {
          setSubmitState(false);
        }
      }

      function installEvents() {
        document.getElementById("btnExperimentHero")?.addEventListener("click", function () {
          showPlansStage();
        });

        document.querySelectorAll(".plan-select-btn").forEach((btn) => {
          btn.addEventListener("click", function () {
            const card = btn.closest(".plan-card");
            if (!card) return;
            renderPlanSelection(card);
          });
        });

        document.getElementById("btnBackPlans")?.addEventListener("click", function () {
          showPlanChooser();
          document.getElementById("plansStage")?.scrollIntoView({ behavior: "smooth", block: "start" });
        });

        document.getElementById("publicRegisterForm")?.addEventListener("submit", onSubmitForm);
      }

      $(document).ready(function () {
        new WOW().init();
        installEvents();
      });
    })();
  </script>
