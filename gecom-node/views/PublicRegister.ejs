  <script>
    (function () {
      function normalizeArray(data) {
        if (Array.isArray(data)) return data;
        if (data && Array.isArray(data.data)) return data.data;
        if (data && Array.isArray(data.rows)) return data.rows;
        if (data && Array.isArray(data.items)) return data.items;
        return [];
      }

      function esc(value) {
        return String(value == null ? "" : value)
          .replace(/&/g, "&amp;")
          .replace(/</g, "&lt;")
          .replace(/>/g, "&gt;")
          .replace(/"/g, "&quot;")
          .replace(/'/g, "&#039;");
      }

      function toMoney(value) {
        var n = Number(value);
        if (!Number.isFinite(n) || n < 0) n = 0;
        return n.toLocaleString("pt-BR", { style: "currency", currency: "BRL" });
      }

      function revealPlansStage() {
        var hero = document.getElementById("heroSection");
        var features = document.getElementById("featuresPublic");
        var plans = document.getElementById("plansStage");
        if (hero) hero.classList.add("section-hidden");
        if (features) features.classList.add("section-hidden");
        if (plans) plans.classList.add("is-active");
      }

      function renderPublicPlans(plansData) {
        var container = document.getElementById("dynamicPlansContainer");
        if (!container) return;

        var plans = normalizeArray(plansData);
        var cards = "";

        plans.forEach(function (plan) {
          var modules = normalizeArray(plan && plan.modules).map(function (moduleRow) {
            var moduleName = (moduleRow && moduleRow.name_pt_br) || (moduleRow && moduleRow.code) || "Modulo";
            return "<li>" + esc(moduleName) + "</li>";
          }).join("");

          cards += ''
            + '<div class="col-lg-4 col-md-6">'
            + '  <div class="plan-card" data-plan-id="' + esc(plan && plan.id) + '" data-plan-name="' + esc(plan && plan.name) + '" data-plan-type="standard">'
            + '    <h3 class="plan-name">' + esc((plan && plan.name) || "Plano") + '</h3>'
            + '    <div class="plan-price">' + esc(toMoney(plan && plan.monthly_price)) + ' <small>/mes</small></div>'
            + '    <p class="text-muted">' + esc((plan && plan.description) || "Plano pronto para iniciar seu ambiente.") + '</p>'
            + '    <ul class="plan-list">' + (modules || "<li>Sem modulos listados.</li>") + '</ul>'
            + '    <button class="btn btn-primary btn-plan plan-select-btn" data-plan-id="' + esc(plan && plan.id) + '">Selecionar plano</button>'
            + '  </div>'
            + '</div>';
        });

        cards += ''
          + '<div class="col-lg-4 col-md-6">'
          + '  <div class="plan-card" data-plan-id="__CUSTOM__" data-plan-name="Plano custom" data-plan-type="custom">'
          + '    <h3 class="plan-name">Crie seu plano</h3>'
          + '    <div class="plan-price">Voce escolhe <small>modulo a modulo</small></div>'
          + '    <p class="text-muted">Monte um plano sob medida escolhendo os modulos que precisa e veja o total mensal.</p>'
          + '    <ul class="plan-list">'
          + '      <li>Escolha os modulos desejados</li>'
          + '      <li>Total mensal calculado automaticamente</li>'
          + '      <li>Plano exclusivo associado ao seu tenant</li>'
          + '    </ul>'
          + '    <button class="btn btn-primary btn-plan plan-select-btn" data-plan-id="__CUSTOM__">Montar plano custom</button>'
          + '  </div>'
          + '</div>';

        var emptyWarning = plans.length === 0
          ? '<div class="col-lg-12"><div class="alert alert-warning">Nao ha planos prontos publicados. Voce ainda pode montar um plano custom.</div></div>'
          : '';

        container.innerHTML = '<div class="row">' + emptyWarning + cards + '</div>';
      }

      async function fetchJson(url) {
        var response = await fetch(url, { credentials: "include", headers: { Accept: "application/json" } });
        var text = await response.text().catch(function () { return ""; });
        var data = {};
        try { data = text ? JSON.parse(text) : {}; } catch (_error) { data = {}; }
        if (!response.ok) throw new Error((data && data.message) || ("Falha em " + url));
        return data;
      }

      async function fallbackOpenPlans() {
        revealPlansStage();
        var container = document.getElementById("dynamicPlansContainer");
        if (container) {
          container.innerHTML = '<div class="row"><div class="col-lg-12"><div class="alert alert-info">Carregando planos disponiveis...</div></div></div>';
        }

        try {
          var plans = await fetchJson("/api/public/billing/plans");
          renderPublicPlans(plans);
        } catch (error) {
          if (container) {
            container.innerHTML = '<div class="row"><div class="col-lg-12"><div class="alert alert-danger">Nao foi possivel carregar os planos.</div></div></div>';
          }
        }
      }

      if (!window.__openRegisterPlans) {
        window.__openRegisterPlans = fallbackOpenPlans;
      }

      var btn = document.getElementById("btnExperimentHero");
      if (btn && !btn.__fallbackBindDone) {
        btn.__fallbackBindDone = true;
        btn.addEventListener("click", function (event) {
          event.preventDefault();
          window.__openRegisterPlans();
        });
      }
    })();
  </script>
