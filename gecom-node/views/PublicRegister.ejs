  <link rel="icon" href="/Pages/favicon.ico" type="image/x-icon" />

  <link href="/Assets/inspinia/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/Assets/inspinia/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
