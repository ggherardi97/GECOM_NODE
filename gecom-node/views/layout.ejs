<script>
  (function () {
    if (window.__gecomDialogOverridden) return;
    window.__gecomDialogOverridden = true;

    const originalAlert = window.alert;
    const originalConfirm = window.confirm;

    function getModalElements() {
      return {
        modalBtn: document.getElementById("modalButton"),
        modalTitle: document.getElementById("modalTitle"),
        modalBody: document.getElementById("modalBody"),
        btnSave: document.getElementById("saveModal"),
        btnClose: document.getElementById("closeModal"),
      };
    }

    /* =========================
       ALERT (fire-and-forget)
       ========================= */
    window.alert = function (message, options) {
      const { modalBtn, modalTitle, modalBody, btnSave, btnClose } = getModalElements();

      if (!modalBtn || !modalTitle || !modalBody || !btnSave || !btnClose) {
        originalAlert(message);
        return;
      }

      const opts = options || {};
      modalTitle.textContent = opts.title || "Aviso";
      modalBody.innerHTML = `<p>${String(message || "")}</p>`;

      btnSave.textContent = opts.okText || "OK";
      btnSave.className = "btn btn-primary";
      btnClose.style.display = "none";

      const cleanup = () => {
        btnSave.onclick = null;
        btnClose.onclick = (message.includes("unauthorized") || message.includes("Falha ao")) ? window.location = "/" : null;
        btnClose.style.display = "";
        btnSave.textContent = "Save";
      };

      btnSave.onclick = () => cleanup();

      modalBtn.click();
    };

    /* =========================
       CONFIRM (Promise<boolean>)
       ========================= */
    window.confirm = function (message, options) {
      const { modalBtn, modalTitle, modalBody, btnSave, btnClose } = getModalElements();

      // Fallback se modal não existir
      if (!modalBtn || !modalTitle || !modalBody || !btnSave || !btnClose) {
        return Promise.resolve(originalConfirm(message));
      }

      const opts = options || {};

      modalTitle.textContent = opts.title || "Confirmação";
      modalBody.innerHTML = `<p>${String(message || "")}</p>`;

      btnSave.textContent = opts.okText || "Confirmar";
      btnClose.textContent = opts.cancelText || "Cancelar";

      btnSave.className = opts.danger
        ? "btn btn-danger"
        : "btn btn-primary";

      return new Promise((resolve) => {
        const cleanup = () => {
          btnSave.onclick = null;
          btnClose.onclick = null;
          btnSave.className = "btn btn-primary";
          btnSave.textContent = "Save";
          btnClose.textContent = "Close";
        };

        btnSave.onclick = () => {
          cleanup();
          resolve(true);
        };

        btnClose.onclick = () => {
          cleanup();
          resolve(false);
        };

        modalBtn.click();
      });
    };

  })();
</script>

