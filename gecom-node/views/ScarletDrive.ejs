<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ScarletDrive - Lista de Convidados</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;600;700&family=Space+Grotesk:wght@400;500;700&display=swap" rel="stylesheet" />
  <style>
    :root {
      --bg-main: #0f1116;
      --bg-panel: rgba(20, 24, 32, 0.92);
      --bg-soft: rgba(255, 255, 255, 0.04);
      --line: rgba(255, 255, 255, 0.14);
      --text-main: #f7f8fa;
      --text-soft: #c6c9d0;
      --scarlet: #d92f2f;
      --scarlet-soft: #ff5f5f;
      --ok: #1fbe72;
      --warn: #f4a528;
      --danger: #ff4d4f;
      --shadow: 0 20px 40px rgba(0, 0, 0, 0.35);
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      min-height: 100vh;
      color: var(--text-main);
      font-family: "Space Grotesk", sans-serif;
      background:
        radial-gradient(circle at 12% 15%, rgba(217, 47, 47, 0.22), transparent 30%),
        radial-gradient(circle at 88% 8%, rgba(255, 95, 95, 0.2), transparent 24%),
        linear-gradient(140deg, #0a0b0f 0%, #131923 50%, #10141d 100%);
      padding: 30px 16px 44px;
    }

    .page {
      max-width: 1240px;
      margin: 0 auto;
      display: grid;
      gap: 20px;
    }

    .panel {
      border: 1px solid var(--line);
      border-radius: 16px;
      background: var(--bg-panel);
      box-shadow: var(--shadow);
      backdrop-filter: blur(8px);
    }

    .hero {
      overflow: hidden;
      position: relative;
      padding: 20px;
      display: grid;
      gap: 14px;
    }

    .hero::after {
      content: "";
      position: absolute;
      inset: auto -120px -120px auto;
      width: 260px;
      height: 260px;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(217, 47, 47, 0.25), transparent 70%);
      pointer-events: none;
    }

    .hero-top {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      flex-wrap: wrap;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo {
      width: 64px;
      height: 64px;
      border-radius: 12px;
      object-fit: cover;
      border: 1px solid var(--line);
      background: rgba(0, 0, 0, 0.2);
    }

    .brand-title {
      margin: 0;
      font-family: "Oswald", sans-serif;
      font-size: clamp(28px, 3.5vw, 42px);
      text-transform: uppercase;
      letter-spacing: 1px;
      line-height: 1;
    }

    .brand-sub {
      margin: 4px 0 0;
      color: var(--text-soft);
      font-size: 14px;
    }

    .counter-total {
      padding: 10px 14px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      background: rgba(0, 0, 0, 0.25);
      white-space: nowrap;
      font-weight: 700;
    }

    .counter-total strong {
      color: var(--scarlet-soft);
    }

    .host-chips {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
      gap: 10px;
    }

    .chip {
      border: 1px solid var(--line);
      background: var(--bg-soft);
      border-radius: 10px;
      padding: 10px 12px;
      display: flex;
      justify-content: space-between;
      gap: 8px;
      align-items: center;
      font-size: 14px;
    }

    .chip strong {
      color: var(--text-main);
    }

    .chip-value {
      font-weight: 700;
      color: var(--text-soft);
    }

    .chip.is-limit .chip-value {
      color: var(--danger);
    }

    .layout-grid {
      display: grid;
      grid-template-columns: 1.2fr 0.8fr;
      gap: 20px;
    }

    .panel-body {
      padding: 18px;
    }

    .panel-title {
      margin: 0 0 14px;
      font-family: "Oswald", sans-serif;
      text-transform: uppercase;
      letter-spacing: 0.7px;
      font-size: 24px;
    }

    .add-form {
      display: grid;
      grid-template-columns: 2fr 1fr 0.8fr 0.9fr auto;
      gap: 10px;
      align-items: end;
    }

    .field {
      display: grid;
      gap: 6px;
    }

    .field label {
      color: var(--text-soft);
      font-size: 12px;
      letter-spacing: 0.4px;
      text-transform: uppercase;
    }

    input[type="text"],
    select {
      width: 100%;
      border: 1px solid var(--line);
      background: rgba(255, 255, 255, 0.05);
      color: var(--text-main);
      border-radius: 10px;
      padding: 10px 11px;
      font: inherit;
    }

    input[type="text"]:focus,
    select:focus {
      outline: none;
      border-color: var(--scarlet-soft);
      box-shadow: 0 0 0 2px rgba(217, 47, 47, 0.22);
    }

    /* Keep native dropdown options readable on light system popup backgrounds */
    select option {
      color: #1a1d23;
      background: #ffffff;
    }

    .btn {
      border: 0;
      border-radius: 10px;
      padding: 11px 14px;
      font: inherit;
      font-weight: 700;
      cursor: pointer;
      transition: transform 0.16s ease, opacity 0.16s ease;
    }

    .btn:hover {
      transform: translateY(-1px);
    }

    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    .btn-add {
      background: linear-gradient(120deg, #c32222, #f14545);
      color: #fff;
      white-space: nowrap;
    }

    .btn-delete {
      background: rgba(255, 77, 79, 0.12);
      color: #ff9f9f;
      border: 1px solid rgba(255, 77, 79, 0.3);
      padding: 8px 10px;
    }

    .feedback {
      min-height: 22px;
      margin: 10px 0 0;
      font-size: 14px;
      color: var(--text-soft);
    }

    .feedback.error {
      color: #ff8f8f;
    }

    .feedback.success {
      color: #8cf1ba;
    }

    .table-wrap {
      margin-top: 14px;
      overflow-x: auto;
      border: 1px solid var(--line);
      border-radius: 12px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      min-width: 760px;
    }

    thead th {
      text-align: left;
      font-size: 12px;
      color: var(--text-soft);
      letter-spacing: 0.45px;
      text-transform: uppercase;
      background: rgba(0, 0, 0, 0.2);
      padding: 10px;
      border-bottom: 1px solid var(--line);
      white-space: nowrap;
    }

    tbody td {
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      padding: 8px 10px;
      vertical-align: middle;
    }

    tbody tr:last-child td {
      border-bottom: 0;
    }

    .name-input {
      min-width: 180px;
    }

    .small-select {
      min-width: 130px;
    }

    .charts-grid {
      display: grid;
      gap: 12px;
    }

    .chart-card {
      border: 1px solid var(--line);
      background: var(--bg-soft);
      border-radius: 12px;
      padding: 12px;
    }

    .chart-card h3 {
      margin: 0 0 8px;
      font-size: 14px;
      text-transform: uppercase;
      color: var(--text-soft);
      letter-spacing: 0.6px;
    }

    .chart-container {
      min-height: 220px;
      position: relative;
    }

    .helper {
      margin: 10px 0 0;
      color: var(--text-soft);
      font-size: 13px;
      line-height: 1.5;
    }

    @media (max-width: 1080px) {
      .layout-grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 880px) {
      .add-form {
        grid-template-columns: 1fr;
      }

      .add-form .btn-add {
        width: 100%;
      }

      .counter-total {
        width: 100%;
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <main class="page">
    <section class="panel hero">
      <div class="hero-top">
        <div class="brand">
          <img id="scarletLogo" class="logo" src="/Assets/scarletdrive-logo.png" alt="Logo ScarletDrive" onerror="this.style.display='none'" />
          <div>
            <h1 class="brand-title">ScarletDrive Guestlist</h1>
            <p class="brand-sub">Pagina publica provisoria para controle de convidados do show.</p>
          </div>
        </div>
        <div id="totalCounter" class="counter-total">Total: <strong>0</strong> / <%= maxGuests %></div>
      </div>
      <div id="hostChips" class="host-chips"></div>
    </section>

    <section class="layout-grid">
      <article class="panel panel-body">
        <h2 class="panel-title">Add convidado +</h2>
        <form id="addForm" class="add-form">
          <div class="field">
            <label for="guestName">Nome</label>
            <input id="guestName" type="text" maxlength="120" placeholder="Nome do convidado" required />
          </div>
          <div class="field">
            <label for="guestHost">Convidado por</label>
            <select id="guestHost" required>
              <% scarletHosts.forEach(function(host) { %>
                <option value="<%= host %>"><%= host %></option>
              <% }) %>
            </select>
          </div>
          <div class="field">
            <label for="guestPaid">Pago?</label>
            <select id="guestPaid">
              <option value="false">Nao</option>
              <option value="true">Sim</option>
            </select>
          </div>
          <div class="field">
            <label for="guestConfirmed">Confirmado?</label>
            <select id="guestConfirmed">
              <option value="false">Nao</option>
              <option value="true">Sim</option>
            </select>
          </div>
          <button id="addBtn" type="submit" class="btn btn-add">Adicionar +</button>
        </form>
        <div id="feedback" class="feedback"></div>

        <div class="table-wrap">
          <table>
            <thead>
              <tr>
                <th>Nome</th>
                <th>Convidado por</th>
                <th>Pago?</th>
                <th>Confirmado?</th>
                <th>Excluir</th>
              </tr>
            </thead>
            <tbody id="guestsTableBody">
              <tr>
                <td colspan="5">Carregando...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </article>

      <aside class="panel panel-body">
        <h2 class="panel-title">Visao rapida</h2>
        <div class="charts-grid">
          <div class="chart-card">
            <h3>Confirmados vs nao confirmados</h3>
            <div class="chart-container">
              <canvas id="confirmedChart"></canvas>
            </div>
          </div>
          <div class="chart-card">
            <h3>Pago vs nao pago</h3>
            <div class="chart-container">
              <canvas id="paidChart"></canvas>
            </div>
          </div>
        </div>
        <p class="helper">
          Limites ativos: maximo de <strong><%= maxGuests %></strong> convidados no total e
          <strong><%= maxPerHost %></strong> por convidador.
        </p>
      </aside>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <script>
    (function () {
      const HOSTS = <%- JSON.stringify(scarletHosts) %>;
      const API_BASE = "/api/scarlet-drive/guests";
      const MAX_PER_HOST = Number(<%- maxPerHost %>);

      const addForm = document.getElementById("addForm");
      const addBtn = document.getElementById("addBtn");
      const guestName = document.getElementById("guestName");
      const guestHost = document.getElementById("guestHost");
      const guestPaid = document.getElementById("guestPaid");
      const guestConfirmed = document.getElementById("guestConfirmed");
      const feedback = document.getElementById("feedback");
      const tableBody = document.getElementById("guestsTableBody");
      const totalCounter = document.getElementById("totalCounter");
      const hostChips = document.getElementById("hostChips");

      let confirmedChart = null;
      let paidChart = null;

      function setFeedback(message, mode) {
        feedback.textContent = message || "";
        feedback.className = "feedback";
        if (mode) feedback.classList.add(mode);
      }

      function parseJson(response) {
        return response.json().catch(() => ({}));
      }

      async function request(url, options) {
        const response = await fetch(url, {
          headers: { "Content-Type": "application/json" },
          ...options,
        });

        const data = await parseJson(response);
        if (!response.ok) {
          const err = new Error(data.message || "Erro na requisicao.");
          err.code = data.code;
          throw err;
        }
        return data;
      }

      function makeSelect(options, selectedValue) {
        const select = document.createElement("select");
        options.forEach((option) => {
          const opt = document.createElement("option");
          opt.value = String(option.value);
          opt.textContent = option.label;
          if (String(option.value) === String(selectedValue)) {
            opt.selected = true;
          }
          select.appendChild(opt);
        });
        return select;
      }

      function renderHostChips(counters) {
        hostChips.innerHTML = "";
        HOSTS.forEach((host) => {
          const count = (counters.byHost && counters.byHost[host]) || 0;
          const chip = document.createElement("div");
          chip.className = "chip";
          if (count >= MAX_PER_HOST) chip.classList.add("is-limit");

          const hostName = document.createElement("strong");
          hostName.textContent = host;

          const value = document.createElement("span");
          value.className = "chip-value";
          value.textContent = count + " / " + MAX_PER_HOST;

          chip.appendChild(hostName);
          chip.appendChild(value);
          hostChips.appendChild(chip);
        });
      }

      function renderTotal(counters, limits) {
        totalCounter.innerHTML = "Total: <strong>" + counters.total + "</strong> / " + limits.maxGuests;
      }

      function renderCharts(counters) {
        const commonConfig = {
          type: "pie",
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                labels: {
                  color: "#f7f8fa",
                  font: { family: "Space Grotesk", size: 12 },
                },
              },
            },
          },
        };

        const confirmedData = {
          labels: ["Confirmados", "Nao confirmados"],
          datasets: [
            {
              data: [counters.confirmed.yes, counters.confirmed.no],
              backgroundColor: ["#1fbe72", "#4a5468"],
              borderColor: ["#0f1116", "#0f1116"],
              borderWidth: 2,
            },
          ],
        };

        const paidData = {
          labels: ["Pago", "Nao pago"],
          datasets: [
            {
              data: [counters.paid.yes, counters.paid.no],
              backgroundColor: ["#d92f2f", "#4a5468"],
              borderColor: ["#0f1116", "#0f1116"],
              borderWidth: 2,
            },
          ],
        };

        if (!confirmedChart) {
          confirmedChart = new Chart(document.getElementById("confirmedChart"), {
            ...commonConfig,
            data: confirmedData,
          });
        } else {
          confirmedChart.data = confirmedData;
          confirmedChart.update();
        }

        if (!paidChart) {
          paidChart = new Chart(document.getElementById("paidChart"), {
            ...commonConfig,
            data: paidData,
          });
        } else {
          paidChart.data = paidData;
          paidChart.update();
        }
      }

      async function updateGuest(id, payload) {
        const data = await request(API_BASE + "/" + encodeURIComponent(id), {
          method: "PATCH",
          body: JSON.stringify(payload),
        });
        renderAll(data);
        setFeedback("Lista atualizada.", "success");
      }

      async function deleteGuest(id) {
        const confirmed = window.confirm("Tem certeza que deseja excluir este convidado?");
        if (!confirmed) return;

        const data = await request(API_BASE + "/" + encodeURIComponent(id), {
          method: "DELETE",
        });
        renderAll(data);
        setFeedback("Convidado excluido.", "success");
      }

      function buildRow(guest) {
        const tr = document.createElement("tr");

        const nameTd = document.createElement("td");
        const nameInput = document.createElement("input");
        nameInput.type = "text";
        nameInput.className = "name-input";
        nameInput.maxLength = 120;
        nameInput.value = guest.name || "";
        nameInput.addEventListener("keydown", (event) => {
          if (event.key === "Enter") {
            event.preventDefault();
            nameInput.blur();
          }
        });
        nameInput.addEventListener("blur", async () => {
          const nextValue = String(nameInput.value || "").trim();
          if (!nextValue || nextValue === guest.name) {
            nameInput.value = guest.name || "";
            return;
          }
          try {
            nameInput.disabled = true;
            await updateGuest(guest.id, { name: nextValue });
          } catch (error) {
            setFeedback(error.message, "error");
            nameInput.value = guest.name || "";
          } finally {
            nameInput.disabled = false;
          }
        });
        nameTd.appendChild(nameInput);

        const hostTd = document.createElement("td");
        const hostSelect = makeSelect(
          HOSTS.map((host) => ({ value: host, label: host })),
          guest.invitedBy
        );
        hostSelect.className = "small-select";
        hostSelect.addEventListener("change", async () => {
          try {
            hostSelect.disabled = true;
            await updateGuest(guest.id, { invitedBy: hostSelect.value });
          } catch (error) {
            setFeedback(error.message, "error");
            hostSelect.value = guest.invitedBy;
          } finally {
            hostSelect.disabled = false;
          }
        });
        hostTd.appendChild(hostSelect);

        const paidTd = document.createElement("td");
        const paidSelect = makeSelect(
          [
            { value: "true", label: "Sim" },
            { value: "false", label: "Nao" },
          ],
          String(!!guest.isPaid)
        );
        paidSelect.className = "small-select";
        paidSelect.addEventListener("change", async () => {
          try {
            paidSelect.disabled = true;
            await updateGuest(guest.id, { isPaid: paidSelect.value === "true" });
          } catch (error) {
            setFeedback(error.message, "error");
            paidSelect.value = String(!!guest.isPaid);
          } finally {
            paidSelect.disabled = false;
          }
        });
        paidTd.appendChild(paidSelect);

        const confirmedTd = document.createElement("td");
        const confirmedSelect = makeSelect(
          [
            { value: "true", label: "Sim" },
            { value: "false", label: "Nao" },
          ],
          String(!!guest.isConfirmed)
        );
        confirmedSelect.className = "small-select";
        confirmedSelect.addEventListener("change", async () => {
          try {
            confirmedSelect.disabled = true;
            await updateGuest(guest.id, { isConfirmed: confirmedSelect.value === "true" });
          } catch (error) {
            setFeedback(error.message, "error");
            confirmedSelect.value = String(!!guest.isConfirmed);
          } finally {
            confirmedSelect.disabled = false;
          }
        });
        confirmedTd.appendChild(confirmedSelect);

        const actionTd = document.createElement("td");
        const deleteButton = document.createElement("button");
        deleteButton.type = "button";
        deleteButton.className = "btn btn-delete";
        deleteButton.textContent = "Excluir";
        deleteButton.addEventListener("click", async () => {
          try {
            deleteButton.disabled = true;
            await deleteGuest(guest.id);
          } catch (error) {
            setFeedback(error.message, "error");
          } finally {
            deleteButton.disabled = false;
          }
        });
        actionTd.appendChild(deleteButton);

        tr.appendChild(nameTd);
        tr.appendChild(hostTd);
        tr.appendChild(paidTd);
        tr.appendChild(confirmedTd);
        tr.appendChild(actionTd);
        return tr;
      }

      function renderTable(guests) {
        tableBody.innerHTML = "";
        if (!guests.length) {
          const row = document.createElement("tr");
          const cell = document.createElement("td");
          cell.colSpan = 5;
          cell.textContent = "Nenhum convidado cadastrado ainda.";
          row.appendChild(cell);
          tableBody.appendChild(row);
          return;
        }

        guests.forEach((guest) => {
          tableBody.appendChild(buildRow(guest));
        });
      }

      function renderAll(data) {
        renderTable(data.guests || []);
        renderTotal(data.counters, data.limits);
        renderHostChips(data.counters);
        renderCharts(data.counters);
      }

      async function loadList() {
        const data = await request(API_BASE);
        renderAll(data);
      }

      addForm.addEventListener("submit", async (event) => {
        event.preventDefault();
        const name = String(guestName.value || "").trim();
        if (!name) {
          setFeedback("Informe o nome do convidado.", "error");
          return;
        }

        addBtn.disabled = true;
        try {
          const data = await request(API_BASE, {
            method: "POST",
            body: JSON.stringify({
              name,
              invitedBy: guestHost.value,
              isPaid: guestPaid.value === "true",
              isConfirmed: guestConfirmed.value === "true",
            }),
          });

          renderAll(data);
          guestName.value = "";
          guestPaid.value = "false";
          guestConfirmed.value = "false";
          guestName.focus();
          setFeedback("Convidado adicionado com sucesso.", "success");
        } catch (error) {
          setFeedback(error.message, "error");
        } finally {
          addBtn.disabled = false;
        }
      });

      loadList().catch((error) => {
        setFeedback(error.message || "Falha ao carregar lista.", "error");
        tableBody.innerHTML = "<tr><td colspan='5'>Erro ao carregar dados.</td></tr>";
      });
    })();
  </script>
</body>
</html>
